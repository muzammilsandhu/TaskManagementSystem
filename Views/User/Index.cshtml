@model List<TaskManagementSystem.Models.TaskItem>

@{
    ViewData["Title"] = "User - My Tasks";
}

<h2>My Tasks</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>
                    @if (task.Status != TaskManagementSystem.Models.TaskStatus.Completed)
                    {
                        <form asp-action="MarkAsCompleted" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Mark as Completed</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Completed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
